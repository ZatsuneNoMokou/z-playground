{
  "name": "z-flems",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "find src/ public/ -type f -and \\( -name '\\*.avif' -o -name '\\*.css' -o -name '\\*.js' -o -name '\\*.d.ts' -o -name '\\*.map' \\) -delete",
    "find-images": "find public -type f \\( -iname \"*.jpg\" -o -iname \"*.jpeg\" -o -iname \"*.gif\" -o -iname \"*.webp\" -o -iname \"*.png\" \\)",
    "build:avif": "yarn find-images | yarn node convertAvif.js",
    "build:sass": "yarn sass public/css:public/css",
    "build:node": "yarn tsc -p tsconfig.node.json && yarn build:avif",
    "build:browser": "yarn tsc -p tsconfig.browser.json",
    "build": "yarn run clean && yarn concurrently \"yarn run build:node\" \"yarn run build:sass\" \"yarn run build:browser\"",
    "dev": "nodemon",
    "start": "node --env-file=.env src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:sass": "yarn sass public/css:public/css --watch",
    "watch:node": "yarn tsc -p tsconfig.node.json --watch",
    "watch:browser": "yarn tsc -p tsconfig.browser.json --watch",
    "watch": "yarn concurrently \"yarn run watch:node\" \"yarn run watch:sass\" \"yarn run watch:browser\""
  },
  "nodemonConfig": {
    "watch": [
      ".env",
      "yarn.lock",
      "src/*.js",
      "src/**/*.js"
    ],
    "ext": "js,env,lock",
    "exec": "yarn run start"
  },
  "devDependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.2.0",
    "@sinclair/typebox": "^0.34.38",
    "@types/node": "^22.10.3",
    "concurrently": "^9.2.0",
    "fastify": "^5.4.0",
    "nodemon": "^3.1.10",
    "p-limit": "^6.2.0",
    "pino-pretty": "^13.0.0",
    "sass-embedded": "^1.89.2",
    "sharp": "^0.34.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "flems": "^1.5.10"
  }
}
