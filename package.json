{
  "name": "z-flems",
  "packageManager": "yarn@4.9.2",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "find src/ public/js/ -type f -and \\( -name '\\*.js' -o -name '\\*.d.ts' -o -name '\\*.map' \\) -delete",
    "build:node": "yarn tsc -p tsconfig.node.json",
    "build:browser": "yarn tsc -p tsconfig.browser.json",
    "build": "yarn run clean && yarn run build:node && yarn run build:browser",
    "dev": "nodemon",
    "start": "node --env-file=.env src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:node": "yarn tsc -p tsconfig.node.json --watch",
    "watch:browser": "yarn tsc -p tsconfig.browser.json --watch",
    "watch": "yarn concurrently \"yarn run watch:node\" \"yarn run watch:browser\""
  },
  "nodemonConfig": {
    "watch": [
      ".env",
      "yarn.lock",
      "src/*.js",
      "src/**/*.js"
    ],
    "ext": "js,env,lock",
    "exec": "yarn run start"
  },
  "devDependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/static": "^8.2.0",
    "@sinclair/typebox": "^0.34.38",
    "@types/node": "^22.10.3",
    "concurrently": "^9.2.0",
    "fastify": "^5.4.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "flems": "^1.5.10"
  }
}
